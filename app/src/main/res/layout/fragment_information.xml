<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginback1"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageViewDistances"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:src="@drawable/distanceicon1"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/textView20"
        android:layout_alignParentRight="true"
 />

    <ImageView
        android:id="@+id/imageViewTriathlon"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/triathlonicon"
        android:layout_above="@+id/imageViewRules"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="64dp" />

    <ImageView
        android:id="@+id/imageViewRules"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:src="@drawable/rules1"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Triathlon"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:textSize="20dp"
        android:background="#40ffffff"
        android:id="@+id/textView18"
        android:layout_alignBottom="@+id/imageViewTriathlon" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="#40ffffff"
        android:gravity="center"
        android:layout_marginRight="16dp"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dystanse"
        android:id="@+id/textView20"
        android:layout_marginLeft="230dp"
        android:layout_alignBottom="@+id/imageViewTriathlon" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Zasady"
        android:gravity="center"
        android:background="#40ffffff"
        android:id="@+id/textView21"
        android:textSize="26dp"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
                    <ImageButton
                        android:id="@+id/button2MonthWeek3Sr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:background="@null"
                        android:onClick="onClick"
                        android:paddingTop="8dp"
                        android:src="@drawable/run_icon_scaled" />

                    <ImageButton
                        android:id="@+id/button2MonthWeek3Czw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:background="@null"
                        android:onClick="onClick"
                        android:paddingTop="8dp"
                        android:src="@drawable/swim_icon_scaled" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:src="@drawable/wolne" />

                    <ImageButton
                        android:id="@+id/button2MonthWeek3Sob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:background="@null"
                        android:onClick="onClick"
                        android:paddingTop="8dp"
                        android:src="@drawable/ride_icon_scaled" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:src="@drawable/wolne" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#33000000"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:paddingTop="6dp"
                        android:text="Tydzień #04"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/button2MonthWeek4Pon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

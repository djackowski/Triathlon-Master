                    <ImageButton
                        android:id="@+id/button2MonthWeek4Sr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:background="@null"
                        android:onClick="onClick"
                        android:paddingTop="8dp"
                        android:src="@drawable/run_icon_scaled" />

                    <ImageButton
                        android:id="@+id/button2MonthWeek4Czw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:background="@null"
                        android:onClick="onClick"
                        android:paddingTop="8dp"
                        android:src="@drawable/swim_icon_scaled" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:src="@drawable/wolne" />

                    <ImageButton
                        android:id="@+id/button2MonthWeek4Sob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:background="@null"
                        android:onClick="onClick"
                        android:paddingTop="8dp"
                        android:src="@drawable/ride_icon_scaled" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:src="@drawable/wolne" />
                </TableRow>


            </TableLayout>


        </ScrollView>
    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonPreviouslyMonthFromSecondAdvanced"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onClick"
            android:background="@drawable/previous"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/buttonNextMonthFromSecondAdvanced"
            android:layout_toStartOf="@+id/buttonNextMonthFromSecondAdvanced" />

        <Button
            android:id="@+id/buttonNextMonthFromSecondAdvanced"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:onClick="onClick"
            android:background="@drawable/next"
  />
    </RelativeLayout>

</LinearLayout>
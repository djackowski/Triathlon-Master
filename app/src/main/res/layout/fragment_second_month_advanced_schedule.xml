                    <ImageView
                        android:id="@+id/button2MonthWeek2Wt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClick"
                        android:paddingTop="8dp"
                        android:src="@drawable/swim_icon_scaled" />

                    <ImageView
                        android:id="@+id/button2MonthWeek2Sr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClick"
                        android:paddingTop="8dp"
                        android:src="@drawable/run_icon_scaled" />

                    <ImageButton
                        android:id="@+id/button2MonthWeek2Czw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:background="@null"
                        android:onClick="onClick"
                        android:paddingTop="8dp"
                        android:src="@drawable/swim_icon_scaled" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:src="@drawable/wolne" />

                    <ImageButton
                        android:id="@+id/button2MonthWeek2Sob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:background="@null"
                        android:onClick="onClick"
                        android:paddingTop="8dp"
